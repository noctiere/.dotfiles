{
  "layer": "top",
  "position": "top",
  "margin": "0",
  "reload_style_on_change": true,
  "modules-left": ["hyprland/workspaces", "group/info"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "activate",
    "all-outputs": true,
