    //   "10": "ÂçÅ"
    // }
    // "format-icons": {
    //   "1": "‡•ß",
    //   "2": "‡•®",
    //   "3": "‡•©",
    //   "4": "‡•™",
    //   "5": "‡•´",
    //   "6": "‡•¨",
    //   "7": "‡•≠",
    //   "8": "‡•Æ",
    //   "9": "‡•Ø",
